@page
@model Server.Pages.Admin.RoleManager.CreateModel


@{
    var pageTitle =
        Resources.PageTitles.CreateRole;

    ViewData["PageTitle"] = pageTitle;

    if (System.Threading.Thread.CurrentThread.CurrentUICulture.TextInfo.IsRightToLeft)
    {
        Layout =
            "Layouts/Rtl/_Security";
    }
    else
    {
        Layout =
            "Layouts/Ltr/_Security";
    }
}

<form method="post">

    <div class="container my-0 my-sm-1 my-md-3 my-lg-5">
        <div class="row">
            <div class="col-12 p-3   col-md-8 offset-md-2 p-md-4   col-lg-6 offset-lg-3 p-lg-5   bg-light border border-2 rounded-3 shadow-lg">
                <fieldset>
                    <legend class="mb-3">
                        @(Resources.PageTitles.CreateRole)
                    </legend>


                    <div class="mb-3">
                        <label asp-for="Role.RoleName" class="form-label"></label>

                        <div class="input-group">
                            <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                            <input asp-for="Role.RoleName" class="form-control" dir="ltr" />
                        </div>

                        <span asp-validation-for="Role.RoleName" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Role.IsActive" />
                            @Html.DisplayNameFor(model => model.Role.IsActive)
                        </label>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Role.IsDefault" type="radio" name="chooseRadio" value="IsDefault" checked />
                            @Html.DisplayNameFor(model => model.Role.IsDefault)
                        </label>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Role.IsDeletable" type="radio" name="chooseRadio" value="IsDeletable" />
                            @Html.DisplayNameFor(model => model.Role.IsDeletable)
                        </label>
                    </div>

                    <div class="mb-3 mt-3">
                        <button type="submit" class="btn btn-outline-primary">@(Resources.ButtonCaptions.Save)</button>
                        <button type="reset" class="btn btn-outline-secondary">@(Resources.ButtonCaptions.Reset)</button>
                    </div>


                </fieldset>

                <hr class="mt-4" />

                <div class="text-center">
                    <a asp-page="./Index" class="btn btn-outline-secondary">@(Resources.DataDictionary.ListOfRoles)</a>
                    |
                    <a href="/" class="btn btn-outline-primary">@(Resources.ButtonCaptions.Home)</a>
                </div>
            </div>
        </div>
    </div>

</form>


@page
@model Server.Pages.Admin.RoleManager.EditModel

@{
    var pageTitle =
        Resources.PageTitles.CreateRole;

    ViewData["PageTitle"] = pageTitle;

    if (System.Threading.Thread.CurrentThread.CurrentUICulture.TextInfo.IsRightToLeft)
    {
        Layout =
            "Layouts/Rtl/_Security";
    }
    else
    {
        Layout =
            "Layouts/Ltr/_Security";
    }
}


<div class="container my-0 my-sm-1 my-md-3 my-lg-5">
    <div class="row">
        <div class="col-12 p-3   col-md-8 offset-md-2 p-md-4   col-lg-6 offset-lg-3 p-lg-5   bg-light border border-2 rounded-3 shadow-lg">
            <fieldset>
                <legend>
                    @(Resources.PageTitles.EditRole)
                </legend>

                <form method="post">
                    <input type="hidden" asp-for="Role.Id" />
                    <div class="mb-3">
                        <label asp-for="Role.RoleName" class="form-label"></label>
                        <input asp-for="Role.RoleName" class="form-control" dir="ltr" />
                        <span asp-validation-for="Role.RoleName" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Role.IsActive" /> @Html.DisplayNameFor(model => model.Role.IsActive)
                        </label>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-outline-success">@(Resources.ButtonCaptions.Save)</button>
                        <button type="reset" class="btn btn-outline-danger">@(Resources.ButtonCaptions.Reset)</button>
                    </div>
                </form>

            </fieldset>

            <hr class="mt-4" />

            <div class="text-center">
                <a asp-page="./Index" class="btn btn-outline-secondary">@(Resources.ButtonCaptions.Back)</a>
                |
                <a href="/" class="btn btn-outline-primary">@(Resources.ButtonCaptions.Home)</a>
            </div>
        </div>
    </div>
</div>



